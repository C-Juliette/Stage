#'
#' @param M a number, a vector or a matrix, with or without NA
#'
#' @return a float (variance )
#' @export
#'
#' @examples
#' variance(c(1, 2, 3))
#' variance (matrix(rbinom(2*2, 1, 0.5), nrow = 2))
#'
variance <- function(M){
if (is.data.frame(M)){M <- as.matrix(M)}
if (!is.vector(M) & !is.matrix(M)){stop("M must be a number/vector/matrix/dataframe")}
if (!is.numeric(M)){stop("M must contain numeric values")}
return(mean(M**2, na.rm = TRUE) - mean(M, na.rm = TRUE)**2)
}
w <- list(1,2)
variance(w)
!is.vector(w) & !is.matrix(w)
!is.vector(w)
is.vector(w)
is.list(w)
as.vector(w)
w
variance(w)
